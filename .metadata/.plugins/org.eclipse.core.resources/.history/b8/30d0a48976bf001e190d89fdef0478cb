
package fr.greta.tp;

public class Factorielle {
    public static void main(String[] args) {


    	final int N = 0; 
    	 int i = 1;
    	while (i <= N) {
            long factorielle = getFactorial(i);
            System.out.println(i + "! = " + factorielle);
            i++;
        }
    	
    	
    }
    
   

    public static int getFactorial(int f) {
    	  int result = 1;
    	  
    	  for (int i = 1; i <= f; i++) {
    	     result = result * i; 
    	  }
    	  return result;
    	}
   
}
