package fr.gretta.tp2.metier;

import java.util.ArrayList;
import java.util.List;

import fr.greta.tp2.entity.Personne;

public class PersonneMetier {
	
	private static List<Personne> personnes;
	
	
	
	public PersonneMetier() {
		personnes =new ArrayList<Personne> ();
	}

	public void addPersonne(Personne personne) {
        if (!personnes.contains(personne)) {
            personnes.add(personne);
            System.out.println("Personne ajoutée avec succès : " + personne);
        } else {
            System.out.println("La personne existe déjà dans la liste : " + personne);
        }
    }


	
	
	
	

}
