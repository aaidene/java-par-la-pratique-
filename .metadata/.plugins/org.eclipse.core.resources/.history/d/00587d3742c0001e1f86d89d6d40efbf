import java.util.Iterator;
import java.util.List;

import fr.greta.tp2.entity.Adresse;
import fr.greta.tp2.entity.Personne;
import fr.gretta.tp2.metier.PersonneMetier;

public class Main2 {

	public static void main(String[] args) {
		
		// Création de la première personne
        Personne p1 = new Personne("nom1", "prenom1", 70);

        Adresse a1 = new Adresse("5", "rue de bastille", "Paris", "75000");
        Adresse a2 = new Adresse("10", "avenue des Champs-Élysées", "Paris", "75001");

        p1.getAdresses().add(a1);
        p1.getAdresses().add(a2);

    
        System.out.println("Personne 1:\n" + p1);

        // Création de la deuxième personne
        Personne p2 = new Personne("nom2", "prenom2", 45);

        Adresse a3 = new Adresse("3", "rue du Louvre", "Paris", "75002");
        Adresse a4 = new Adresse("20", "rue de Rivoli", "Paris", "75003");

        p2.getAdresses().add(a3);
        p2.getAdresses().add(a4);

       PersonneMetier.addPersonne(p1);
       PersonneMetier.addPersonne(p2);
    
        
       System.out.println("\nPersonne 1:\n" + p1);
       
       System.out.println("=====================================");
  
        List<Personne> personnes=PersonneMetier.getPersonnes();
        
       for (Personne p : personnes) {
    	   
    	   System.out.println("\nPersonne 2:\n" + p2);
    	   for (Adresse a : p.getAdresses()) {
    		     System.out.println("\nPersonne 2:\n" + a);
		}
    	   
	}
         
	}

}
